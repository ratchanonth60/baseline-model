<Window x:Class="BaselineMode.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BaselineMode.WPF.ViewModels"
        xmlns:scott="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Baseline Mode" 
        Height="950" Width="1700"
        WindowState="Maximized"
        Background="{StaticResource MainBackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderGradient}"
                Padding="32,24"
                Margin="0,0,0,24">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Opacity="0.1" BlurRadius="16"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Baseline Mode for Charged Particle Detector"
                             FontSize="32"
                             FontWeight="Bold"
                             Foreground="White"/>
                    <TextBlock Text="Version 2025.05.17"
                             FontSize="14"
                             Foreground="White"
                             Opacity="0.9"
                             Margin="0,4,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1"
                         Text="{Binding CurrentDateTime, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="White"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1" Margin="32,0,32,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== LEFT PANEL ========== -->
            <ScrollViewer Grid.Column="0" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    
                    <!-- File Selection Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📁 File Selection" Style="{StaticResource CardHeaderStyle}"/>
                            
                            <Button Content="📂 Select File(s)" 
                                  Command="{Binding SelectFilesCommand}" 
                                  Style="{StaticResource PrimaryBtn}" 
                                  Margin="0,0,0,12"/>
                            
                            <Button Content="⚙️ Process Data" 
                                  Command="{Binding PreProcessDataCommand}" 
                                  Style="{StaticResource SecondaryBtn}" 
                                  Margin="0,0,0,12"/>
                            
                            <TextBlock Text="{Binding InputFilesInfo}" 
                                     FontSize="12" 
                                     Foreground="{StaticResource SecondaryColor}" 
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Output Folder Root" Style="{StaticResource LabelStyle}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding OutputDirectoryPath}" IsReadOnly="True" Margin="0,0,8,0"/>
                                <Button Grid.Column="1" Content="..." 
                                        Command="{Binding BrowseOutputDirectoryCommand}" 
                                        Width="30" Padding="0,4"/>
                            </Grid>

                            <TextBlock Text="Output Filename" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding OutputFileName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Border>

                    <!-- Test Configuration Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚙️ Test Configuration" Style="{StaticResource CardHeaderStyle}"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Delay (μs)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding DelayTimeMs, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Threshold" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding ThresholdValue, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>

                            <Button Content="✓ Check Header" 
                                  Command="{Binding CheckHeaderCommand}" 
                                  Style="{StaticResource SecondaryBtn}"/>
                        </StackPanel>
                    </Border>

                    <!-- Processing Control Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="▶️ Processing Control" Style="{StaticResource CardHeaderStyle}"/>
                            
                            <Button Content="▶️ Start Processing" 
                                  Command="{Binding ProcessDataCommand}" 
                                  Style="{StaticResource SuccessBtn}" 
                                  Margin="0,0,0,12"/>
                            
                            <Button Content="⏹️ Stop" 
                                  Command="{Binding StopCommand}" 
                                  Style="{StaticResource DangerBtn}" 
                                  Margin="0,0,0,12"/>
                            
                            <Button Content="🔄 Reset" 
                                  Command="{Binding ResetCommand}" 
                                  Style="{StaticResource SecondaryBtn}"
                                  Margin="0,0,0,16"/>
                            
                            <!-- Progress Section -->
                            <TextBlock Text="Progress" Style="{StaticResource LabelStyle}"/>
                            <ProgressBar Value="{Binding ProgressValue}" 
                                       Height="8" 
                                       BorderThickness="0" 
                                       Background="{StaticResource DividerBrush}" 
                                       Foreground="{StaticResource AccentColor}" 
                                       Maximum="100"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Text="{Binding StatusMessage}" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource AccentColor}"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,16"/>
                            
                            <!-- Status Grid -->
                            <Border Background="{StaticResource DividerBrush}" 
                                  CornerRadius="8" 
                                  Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Start Time:" Grid.Row="0" Grid.Column="0" 
                                             Style="{StaticResource LabelStyle}" Margin="0,0,12,8"/>
                                    <TextBlock Text="{Binding StartTimeStr}" Grid.Row="0" Grid.Column="1" 
                                             Style="{StaticResource ValueStyle}" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                    <TextBlock Text="Stop Time:" Grid.Row="1" Grid.Column="0" 
                                             Style="{StaticResource LabelStyle}" Margin="0,0,12,8"/>
                                    <TextBlock Text="{Binding StopTimeStr}" Grid.Row="1" Grid.Column="1" 
                                             Style="{StaticResource ValueStyle}" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                    <TextBlock Text="Duration:" Grid.Row="2" Grid.Column="0" 
                                             Style="{StaticResource LabelStyle}" Margin="0,0,12,8"/>
                                    <TextBlock Text="{Binding DurationStr}" Grid.Row="2" Grid.Column="1" 
                                             Style="{StaticResource ValueStyle}" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                    <TextBlock Text="Data Counts:" Grid.Row="3" Grid.Column="0" 
                                             Style="{StaticResource LabelStyle}" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding DataCountsStr}" Grid.Row="3" Grid.Column="1" 
                                             Style="{StaticResource ValueStyle}" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Analysis Settings Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊 Analysis Settings" Style="{StaticResource CardHeaderStyle}"/>

                            <TextBlock Text="DSSD Layer" Style="{StaticResource LabelStyle}"/>
                            <ComboBox SelectedIndex="{Binding SelectedLayerIndex}" Margin="0,0,0,12">
                                <ComboBoxItem Content="DSSD L1"/>
                                <ComboBoxItem Content="DSSD L2"/>
                                <ComboBoxItem Content="DSSD L6"/>
                                <ComboBoxItem Content="DSSD L7"/>
                            </ComboBox>

                            <TextBlock Text="Display Mode" Style="{StaticResource LabelStyle}"/>
                            <ComboBox SelectedIndex="{Binding SelectedBaselineMode}" Margin="0,0,0,12">
                                <ComboBoxItem Content="Auto Mean Subtraction"/>
                                <ComboBoxItem Content="Load from File"/>
                            </ComboBox>
                            
                            <TextBlock Text="X-Axis" Style="{StaticResource LabelStyle}"/>
                            <ComboBox SelectedIndex="{Binding SelectedXAxisIndex}" Margin="0,0,0,16">
                                <ComboBoxItem Content="ADC Channel (0-16383)"/>
                                <ComboBoxItem Content="Voltage (mV)"/>
                                <ComboBoxItem Content="Energy (MeV)"/>
                            </ComboBox>
                            
                            <CheckBox IsChecked="{Binding UseThresholding}" 
                                    Content="Adaptive Thresholding" 
                                    Margin="0,0,0,12"/>
                            
                            <CheckBox IsChecked="{Binding UseGaussianFit}" 
                                    Content="Curve Fitting"
                                    Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Fit Function" 
                                     Style="{StaticResource LabelStyle}"
                                     IsEnabled="{Binding UseGaussianFit}"/>
                            <ComboBox SelectedIndex="{Binding SelectedFitMethod}" 
                                    IsEnabled="{Binding UseGaussianFit}"
                                    Margin="0,0,0,8">
                                <ComboBoxItem Content="Gaussian"/>
                                <ComboBoxItem Content="Hyper-EMG single tail"/>
                            </ComboBox>

                            <Button Content="🔥 Show 2D Heatmap" 
                                    Command="{Binding ShowHeatmapCommand}" 
                                    Style="{StaticResource SecondaryBtn}"
                                    Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ========== RIGHT PANEL ========== -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="0" Margin="0">
                <TabControl BorderThickness="0" Background="Transparent">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="24,16"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" 
                                              Background="Transparent" 
                                              BorderBrush="Transparent" 
                                              BorderThickness="0,0,0,3" 
                                              Padding="{TemplateBinding Padding}">
                                            <ContentPresenter ContentSource="Header" 
                                                            VerticalAlignment="Center" 
                                                            HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
                                                <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#F1F5F9"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Histogram View Tab -->
                    <TabItem Header="📈 Histogram View">
                        <Grid Margin="20">
                            <TabControl BorderThickness="0" Background="Transparent">
                                
                                <!-- X-Direction Tab -->
                                <TabItem Header="X-Direction (Ch 1-8)">
                                    <Grid Margin="0,12,0,0">
                                        <ItemsControl ItemsSource="{Binding ChannelsX}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="2" Columns="4"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="6" 
                                                          BorderBrush="{StaticResource BorderBrush}" 
                                                          BorderThickness="1" 
                                                          CornerRadius="8" 
                                                          Background="{StaticResource DividerBrush}">
                                                        <Border.InputBindings>
                                                            <MouseBinding MouseAction="LeftDoubleClick" 
                                                                          Command="{Binding DataContext.ShowChannelDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                          CommandParameter="{Binding}"/>
                                                        </Border.InputBindings>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="{Binding Title}" 
                                                                     FontWeight="Bold" 
                                                                     Margin="8,4" 
                                                                     FontSize="11" 
                                                                     Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <scott:WpfPlot Grid.Row="1" 
                                                                         x:Name="WpfPlot" 
                                                                         Loaded="WpfPlot_Loaded" 
                                                                         Tag="{Binding}" 
                                                                         Margin="2"/>
                                                            <TextBlock Text="{Binding StatsText}" 
                                                                     Grid.Row="2" 
                                                                     FontSize="10" 
                                                                     Margin="8,2,8,4" 
                                                                     Foreground="{StaticResource SecondaryColor}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </TabItem>

                                <!-- Z-Direction Tab -->
                                <TabItem Header="Z-Direction (Ch 9-16)">
                                    <Grid Margin="0,12,0,0">
                                        <ItemsControl ItemsSource="{Binding ChannelsZ}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="2" Columns="4"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="6" 
                                                          BorderBrush="{StaticResource BorderBrush}" 
                                                          BorderThickness="1" 
                                                          CornerRadius="8" 
                                                          Background="{StaticResource DividerBrush}">
                                                        <Border.InputBindings>
                                                            <MouseBinding MouseAction="LeftDoubleClick" 
                                                                          Command="{Binding DataContext.ShowChannelDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                          CommandParameter="{Binding}"/>
                                                        </Border.InputBindings>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="{Binding Title}" 
                                                                     FontWeight="Bold" 
                                                                     Margin="8,4" 
                                                                     FontSize="11" 
                                                                     Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <scott:WpfPlot Grid.Row="1" 
                                                                         x:Name="WpfPlot" 
                                                                         Loaded="WpfPlot_Loaded" 
                                                                         Tag="{Binding}" 
                                                                         Margin="2"/>
                                                            <TextBlock Text="{Binding StatsText}" 
                                                                     Grid.Row="2" 
                                                                     FontSize="10" 
                                                                     Margin="8,2,8,4" 
                                                                     Foreground="{StaticResource SecondaryColor}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </TabItem>

                            </TabControl>
                        </Grid>
                    </TabItem>

                    <!-- Data View Tab -->
                    <TabItem Header="📋 Data View">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0"
                                    ItemsSource="{Binding DisplayDataTable}" 
                                    AutoGenerateColumns="True" 
                                    HeadersVisibility="Column" 
                                    GridLinesVisibility="Horizontal"
                                    Background="White" 
                                    BorderThickness="0" 
                                    RowBackground="White" 
                                    AlternatingRowBackground="{StaticResource DividerBrush}"
                                    Margin="0,0,0,12"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Before" Command="{Binding PreviousPageCommand}" Style="{StaticResource SecondaryBtn}" Margin="0,0,16,0" Width="100"/>
                                <TextBlock Text="{Binding PageInfoText}" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Next" Command="{Binding NextPageCommand}" Style="{StaticResource SecondaryBtn}" Margin="16,0,0,0" Width="100"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- Header Information Tab -->
                    <TabItem Header="📄 Header Information">
                        <TextBox Text="{Binding HeaderInfoText}" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="13" 
                               Padding="20"
                               BorderThickness="0"
                               Background="{StaticResource DividerBrush}"
                               TextWrapping="Wrap"
                               VerticalScrollBarVisibility="Auto"/>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>