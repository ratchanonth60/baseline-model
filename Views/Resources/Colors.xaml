<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========== PRIMARY COLORS ========== -->
    <Color x:Key="PrimaryColorValue">#2563EB</Color>
    <Color x:Key="PrimaryDarkColorValue">#1E40AF</Color>
    <Color x:Key="PrimaryLightColorValue">#60A5FA</Color>
    
    <!-- ========== ACCENT COLORS ========== -->
    <Color x:Key="AccentColorValue">#10B981</Color>
    <Color x:Key="AccentDarkColorValue">#059669</Color>
    <Color x:Key="WarningColorValue">#F59E0B</Color>
    <Color x:Key="DangerColorValue">#EF4444</Color>
    
    <!-- ========== BACKGROUND COLORS ========== -->
    <Color x:Key="BackgroundColorValue">#F8FAFC</Color>
    <Color x:Key="SurfaceColorValue">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColorValue">#FFFFFF</Color>
    
    <!-- ========== TEXT COLORS ========== -->
    <Color x:Key="TextPrimaryColorValue">#1E293B</Color>
    <Color x:Key="TextSecondaryColorValue">#64748B</Color>
    <Color x:Key="TextDisabledColorValue">#CBD5E1</Color>
    
    <!-- ========== BORDER COLORS ========== -->
    <Color x:Key="BorderColorValue">#E2E8F0</Color>
    <Color x:Key="DividerColorValue">#F1F5F9</Color>
    
    <!-- ========== SOLID COLOR BRUSHES ========== -->
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource PrimaryColorValue}"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="{StaticResource PrimaryDarkColorValue}"/>
    <SolidColorBrush x:Key="PrimaryLightColor" Color="{StaticResource PrimaryLightColorValue}"/>
    
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource AccentColorValue}"/>
    <SolidColorBrush x:Key="AccentDarkColor" Color="{StaticResource AccentDarkColorValue}"/>
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource WarningColorValue}"/>
    <SolidColorBrush x:Key="DangerColor" Color="{StaticResource DangerColorValue}"/>
    
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource BackgroundColorValue}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColorValue}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColorValue}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColorValue}"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="{StaticResource TextSecondaryColorValue}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColorValue}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColorValue}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColorValue}"/>
    
    <!-- ========== GRADIENT BRUSHES ========== -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColorValue}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryDarkColorValue}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentColorValue}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentDarkColorValue}" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>